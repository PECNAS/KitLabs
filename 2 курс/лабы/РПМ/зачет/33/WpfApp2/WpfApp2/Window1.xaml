<Window x:Class="WpfApp2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Расписание рейсов" Click="MenuItem_Click"/>
        </Menu>
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Text="Предоставляемые услуги" TextWrapping="Wrap"/>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" Text="№ Услуги"/>
            <TextBlock Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Text="Название"/>
            <TextBlock Grid.Column="2" Grid.Row="0" TextWrapping="Wrap" Text="Описание"/>
            <TextBlock Grid.Column="3" Grid.Row="0" TextWrapping="Wrap" Text="Стоимость"/>

            <TextBlock Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" Text="1"/>
            <TextBlock Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="Пассажирские перелеты"/>
            <TextBlock Grid.Column="2" Grid.Row="1" TextWrapping="Wrap" Text="Наша авиакомпания осуществляет пассажирские перелеты из разных городов по всему шару"/>
            <TextBlock Grid.Column="3" Grid.Row="1" TextWrapping="Wrap" Text="от 1999 рублей"/>

            <TextBlock Grid.Column="0" Grid.Row="2" TextWrapping="Wrap" Text="2"/>
            <TextBlock Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Text="Грузовая транспортировка"/>
            <TextBlock Grid.Column="2" Grid.Row="2" TextWrapping="Wrap" Text="В нашей авиакомпании присутствуют в наличии грузовые самолеты способные перевозить груз до 100 тонн"/>
            <TextBlock Grid.Column="3" Grid.Row="2" TextWrapping="Wrap" Text="от 19 999 рублей"/>

            <TextBlock Grid.Column="0" Grid.Row="3" TextWrapping="Wrap" Text="3"/>
            <TextBlock Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Text="Аэрошоу"/>
            <TextBlock Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" Text="Наша компания предоставляет услуги авиашоу для поздравления с днем рождения, на свадьбу и другие ваши праздники"/>
            <TextBlock Grid.Column="3" Grid.Row="3" TextWrapping="Wrap" Text="от 49 999 рублей"/>



        </Grid>
    </DockPanel>
</Window>
