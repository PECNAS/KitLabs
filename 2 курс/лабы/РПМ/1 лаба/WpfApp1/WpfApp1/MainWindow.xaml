<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Width="811" Height="26">
                <TextBlock Margin="20px 0px 20px 0px" TextWrapping="Wrap" Text="Последние документы"/>
                <Button Margin="8px 0px 8px 0px" Content="Открыть"/>
                <Button Margin="8px 0px 8px 0px" Content="Сохранить"/>
                <Button Margin="8px 0px 8px 0px" Content="Закрыть"/>
                <Button Margin="8px 0px 8px 0px" Content="Обработать"/>
                <Button Margin="8px 0px 8px 0px" Content="О программе"/>
            </StackPanel>
            <Grid DockPanel.Dock="Left">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="5px" Text="1.txt" Width="70"/>
                <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="5px" Text="2.txt" Width="70"/>
                <TextBlock Grid.Row="2" TextWrapping="Wrap" Margin="5px" Text="3.txt" Width="70"/>
                <TextBlock Grid.Row="3" TextWrapping="Wrap" Margin="5px" Text="4.txt" Width="70"/>
                <TextBlock Grid.Row="4" TextWrapping="Wrap" Margin="5px" Text="5.txt" Width="70"/>
                <TextBlock Grid.Row="5" TextWrapping="Wrap" Margin="5px" Text="6.txt" Width="70"/>
            </Grid>
            <StackPanel Orientation="Horizontal"  DockPanel.Dock="Top">
                <TextBlock Margin="12px 0px 0px 0px"><Run FontWeight="Bold" Text="1.txt"/></TextBlock>
                <TextBlock Margin="12px 0px 0px 0px" Text="2.txt"></TextBlock>
                <TextBlock Margin="12px 0px 0px 0px" Text="3.txt"></TextBlock>
            </StackPanel>
            <WrapPanel  >
                <Rectangle Fill="Yellow" Margin="10px 5px 0px 0px" Height="100px" Width="70px"></Rectangle>
                <Rectangle Fill="Red" Margin="10px 5px 5px 0px" Height="100px" Width="70px"></Rectangle>
                <Rectangle Fill="Green" Margin="10px 5px 0px 0px" Height="100px" Width="70px"></Rectangle>
                <Rectangle Fill="Blue" Margin="10px 5px 0px 0px" Height="100px" Width="70px"></Rectangle>
                <Rectangle Fill="Gray" Margin="10px 5px 0px 0px" Height="100px" Width="70px"></Rectangle>
                <Rectangle Fill="Salmon" Margin="10px 5px 0px 0px" Height="100px" Width="70px"></Rectangle>
            </WrapPanel>
        </DockPanel>

    </Grid>
</Window>
