                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[1].ScaleY"  Duration="0:0:1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>

