                <TransformGroup>
                    <SkewTransform  AngleY="20" />
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"  />
                </TransformGroup>
            </StackPanel.RenderTransform>
            <StackPanel.Triggers >
                <EventTrigger RoutedEvent="GotFocus" >
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation  Storyboard.TargetProperty="(Canvas.Left)"  Duration="0:0:1" To="300"  />
                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Bottom)" To="200" Duration="0:0:1"  />
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].AngleY" To="0" Duration="0:0:1" /> 
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[1].ScaleX" To="1.7" Duration="0:0:1" />
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[1].ScaleY" To="1.7" Duration="0:0:1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="LostFocus" >
