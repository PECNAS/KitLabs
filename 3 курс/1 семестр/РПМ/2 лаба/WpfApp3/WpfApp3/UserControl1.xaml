<UserControl x:Class="WpfApp3.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#51b4ff"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="67"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="1"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel Margin="20" Height="100" Width="200">
            <StackPanel Orientation="Horizontal">
                <Button Content="Копировать"/>
                <Button Content="Вырезать"/>
                <Button Content="Вставить"/>
            </StackPanel>
            <TextBox  Width="200" Height="70" Background="#355d7b" VerticalScrollBarVisibility="Visible" />

        </StackPanel>
    </Grid>
</UserControl>
