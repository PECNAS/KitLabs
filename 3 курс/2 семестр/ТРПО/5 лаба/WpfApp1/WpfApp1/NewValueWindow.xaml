<Window x:Class="WpfApp1.NewValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F3"
        Title="NewValueWindow">
    <Canvas>
        <TextBlock Text="Новое значение" FontSize="38" FontWeight="Bold" Canvas.Left="57" Canvas.Top="38"/>
        <TextBox Name="ValueTB" Width="300" Height="200" Canvas.Left="50" Canvas.Top="192" FontSize="24"/>
        <Button Content="Сохранить" FontSize="24" Background="#0A1451" Width="300" Height="40" Foreground="#FFFFFF" Canvas.Left="50" Canvas.Top="488" Click="Button_Click"/>
        <TextBlock TextWrapping="Wrap" Name="Description" Text="Новое значение" FontSize="20" Canvas.Left="57" FontWeight="Light" Canvas.Top="94" HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="293"/>
    </Canvas>
</Window>
