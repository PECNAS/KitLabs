<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        ContentRendered="Window_ContentRendered"
        xmlns:wid="clr-namespace:WpfApp1.Templates.Widgets"
        Title="MainWindow" Height="500" Width="900">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4caf50"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0, 7"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value=".5"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#adadad"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Hyperlink">
            <Setter Property="TextDecorations" Value="None"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black"
                BorderThickness=".4"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <WrapPanel HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                <Image Source="Resources/logo.png"
                       Width="37"
                       Margin="0, 0, 20, 0"/>
                <TextBlock Text="Бусов В.Р."
                           FontSize="26"
                           FontWeight="SemiBold"/>
            </WrapPanel>
        </Border>

        <Border BorderBrush="Black"
                BorderThickness=".4"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">
            <Grid VerticalAlignment="Center"
                  HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="520"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Подключение"
                           Name="TitleTBlock"
                           FontSize="32"
                           FontWeight="SemiBold"
                           Grid.Column="0"/>
                <WrapPanel Grid.Column="1"
                           VerticalAlignment="Center"
                           Name="BtnsPanel" Visibility="Hidden">
                    <TextBlock>
                        <Hyperlink Name="DeleteBtn"
                                   Click="DeleteBtn_Click">
                            <Image Width="35"
                                   Source="Resources/delete.png"
                                   Margin="0, 0, 10, 0"/>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock>
                        <Hyperlink Name="AddBtn"
                                   Click="AddBtn_Click">
                            <Image Width="35"
                                   Source="Resources/add.png"
                                   Margin="0, 0, 10, 0"/>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock>
                        <Hyperlink Name="UpdateDtn"
                                   Click="UpdateDtn_Click">
                            <Image Width="35"
                                   Source="Resources/update.png"
                                   Margin="0, 0, 10, 0"/>
                        </Hyperlink>
                    </TextBlock>
                </WrapPanel>

            </Grid>
        </Border>

        <Border BorderBrush="Black"
                BorderThickness=".4"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Stretch">
            <WrapPanel Orientation="Vertical"
                       Margin="0, 40, 0, 0"
                       HorizontalAlignment="Center">

                <Button IsEnabled="False"
                        Content="Бронирование"
                        Name="ReservesBtn"
                        Click="ReservesBtn_Click"/>
                <Button IsEnabled="False"
                        Content="Гости"
                        Name="VisitorsBtn"
                        Click="VisitorsBtn_Click"/>
                <Button IsEnabled="False"
                        Content="Номера"
                        Name="RoomsBtn"
                        Click="RoomsBtn_Click"/>
                <Button IsEnabled="False"
                        Content="Персонал"
                        Name="EmployeesBtn"
                        Click="EmployeesBtn_Click"/>
                <Button IsEnabled="False"
                        Content="Отчет"
                        Name="ExportBtn"
                        Click="ExportBtn_Click"/>
            </WrapPanel>
        </Border>

        <WrapPanel Grid.Row="1"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Name="WidgetPlace">
            <wid:DBLoading></wid:DBLoading>
        </WrapPanel>
    </Grid>
</Window>
