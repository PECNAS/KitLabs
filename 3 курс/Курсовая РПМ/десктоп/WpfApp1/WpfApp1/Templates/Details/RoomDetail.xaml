<Window x:Class="WpfApp1.Templates.Details.RoomDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Templates.Details"
        mc:Ignorable="d"
        Title="RoomDetail" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                Text="Добавление"
                Name="TitleTB"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Margin="0, 30, 0, 0"/>
        <StackPanel Grid.Row="1">
            <WrapPanel>
                <Label Content="Номер:"/>
                <TextBox Name="RoomNumberTB"
                         Width="220"/>
            </WrapPanel>

            <WrapPanel>
                <Label Content="Тип:"/>
                <TextBox Name="RoomTypeTB"
                         Width="220"/>
            </WrapPanel>

            <WrapPanel>
                <Label Content="Цена"/>
                <TextBox Name="PriceTB"
                         Width="200"/>
            </WrapPanel>

            <WrapPanel>
                <Label Content="Описание"/>
                <TextBox Name="DescriptionTB"
                         Width="180"/>
            </WrapPanel>

            <WrapPanel>
                <Label Content="Свободен"/>
                <CheckBox Name="IsFreeCB"/>
            </WrapPanel>

            <WrapPanel>
                <Label Content="Бронь"/>
                <ComboBox Name="ReservesSelector">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StartDate}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </WrapPanel>
        </StackPanel>
        <WrapPanel HorizontalAlignment="Center"
                Grid.Row="2">
            <Button Content="Сохранить"
                Click="Button_Click"/>
        </WrapPanel>
    </Grid>
</Window>
