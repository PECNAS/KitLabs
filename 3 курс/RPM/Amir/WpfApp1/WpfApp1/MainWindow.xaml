<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        xmlns:uc="clr-namespace:WpfApp1.Templates"
        ContentRendered="Window_ContentRendered"
        Title="MainWindow" Height="600" Width="900">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#E8EEFC"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="0, 4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".24*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0"
                   Grid.Column="0"
                   Background="#E8EEFC"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch">
            <TextBlock Text="НАЗВАНИЕ"
                       FontSize="30"
                       FontFamily="Montserrat"
                       FontWeight="Light"
                       Margin="280, 35, 0, 0"/>
        </WrapPanel>

        <WrapPanel Grid.Row="0"
                   Grid.Column="1"
                   Background="#E8EEFC">
            <TextBlock Text="ЛОГОТИП"
                       FontSize="30"
                       FontFamily="Montserrat"
                       FontWeight="Light"
                       Margin="40, 35, 0, 0"/>
        </WrapPanel>

        <WrapPanel Grid.Row="1"
                   Grid.Column="1"
                   Orientation="Vertical">
            <WrapPanel.Background>
                <ImageBrush ImageSource="Resources/backimage.png"
                            Stretch="Fill"/>
            </WrapPanel.Background>
            <Image Source="Resources/logo.png"
                   Width="80"
                   Margin="60, 20"/>
            <TextBlock Text="Фамилия Имя"
                       Foreground="#FFFFFF"
                       FontSize="22"
                       FontWeight="Light"
                       TextAlignment="Center"/>

            <StackPanel>
                <Button Name="StudentsBtn"
                        Content="Учащиеся"
                        Click="StudentsBtn_Click"/>
                <Button Name="InstructorsBtn"
                        Content="Инструкторы"
                        Click="InstructorsBtn_Click"/>
                <Button Name="TicketsBtn"
                        Content="Билеты"
                        Click="TicketsBtn_Click"/>
                <Button Name="CarsBtn"
                        Content="Машины"
                        Click="CarsBtn_Click"/>
                <Button Name="ExportBtn"
                        Content="Экспорт"
                        Click="ExportBtn_Click"/>
            </StackPanel>
        </WrapPanel>

        <WrapPanel Grid.Row="1"
                   Grid.Column="0"
                   Name="WidgetPlace"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <uc:DBLoading></uc:DBLoading>
        </WrapPanel>
        
        
    </Grid>
</Window>
