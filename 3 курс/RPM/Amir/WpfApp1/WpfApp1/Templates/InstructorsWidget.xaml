<UserControl x:Class="WpfApp1.Templates.InstructorsWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Templates"
             mc:Ignorable="d" 
             Height="450" Width="650">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Margin" Value="10, 0, 0, 0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10, 0, 0, 0"/>
        </Style>
    </UserControl.Resources>
    <StackPanel HorizontalAlignment="Stretch"
        Background="White">
        <ListBox Height="350" Name="InstructorsList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Id}"
                               Margin="10, 0, 0, 0"
                               Grid.Column="0"/>
                        <TextBlock Text="{Binding Name}"
                               Margin="10, 0, 0, 0"
                               Grid.Column="1"/>
                        <TextBlock Text="{Binding Email}"
                               Margin="10, 0, 0, 0"
                               Grid.Column="2"/>
                        <TextBlock Text="{Binding Role}"
                               Margin="10, 0, 0, 0"
                               Grid.Column="3"/>
                        <TextBlock Text="{Binding Category}"
                               Margin="10, 0, 0, 0"
                               Grid.Column="4"/>
                        <TextBlock Text="{Binding Car.Name}"
                               Margin="10, 0, 0, 0"
                               Grid.Column="5"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <WrapPanel HorizontalAlignment="Center">
            <Button Name="AddBtn"
            Content="Добавить"
            Click="AddBtn_Click"/>
            <Button Name="DeleteBtn"
            Content="Удалить"
            Click="DeleteBtn_Click"/>
            <Button Name="UpdateBtn"
            Content="Изменить"
            Click="UpdateBtn_Click"/>
        </WrapPanel>

    </StackPanel>
</UserControl>
